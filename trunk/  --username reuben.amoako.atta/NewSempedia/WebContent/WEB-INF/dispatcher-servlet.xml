<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean name="/redirect.htm"	class="com.controller.LoginController" >
		<property name="loginDelegate">
			<ref bean="loginDelegate"/>
		</property>
	</bean>
	
	<bean id="loginFormValidator" class="com.validator.LoginFormValidator"/>
    <bean id="studentFormValidator" class="com.validator.StudentFormValidator"/>
    <bean id="createClassFormValidator" class="com.validator.CreateClassFormValidator"/>
     <bean id="createObjectFormValidator" class="com.validator.CreateObjectFormValidator"/>
    
    
	<bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
      <property name="urlMap">
      	<props>
      		<prop key="/loginPage.htm">loginController</prop>
      		<prop key="/studentPage.htm">StudentController</prop>
      		<prop key="/createClass.htm">classMultiController</prop>
      		<prop key="/addObject.htm">objectMultiController</prop>
      		<prop key="/sempediaHome.htm">sempediaHomeController</prop>
      		<!-- <prop key="/autoComplete.htm">autoCompleteController</prop> -->
      		<prop key="/createObject.htm">getObjectPage</prop>
      	</props>
      </property>
   </bean>
  
   <bean id="getObjectPage" class="org.springframework.web.servlet.mvc.SimpleFormController">
		<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>objectBean</value></property> 
      	<property name="commandClass"><value>com.beans.ObjectBean</value></property>   
		<property name="successView"><value>createObject</value></property>   	
   </bean>
   <bean id="loginController" class="com.controller.LoginController">
      <property name="sessionForm"><value>true</value></property>        
      <property name="commandName"><value>userBean</value></property> 
      <property name="commandClass"><value>com.beans.UserBean</value></property>   
      <property name="validator"><ref bean="loginFormValidator"/></property>
      <property name="formView"><value>loginForm</value></property>
      <!-- <property name="successView"><value>home</value></property> -->
      <property name="successView"><value>createClass</value></property>
      <property name="loginDelegate"><ref bean="loginDelegate"/></property>
   </bean>
   
   <bean id="StudentController" class="com.controller.StudentController">
      <property name="sessionForm"><value>true</value></property>        
      <property name="commandName"><value>studentBean</value></property> 
      <property name="commandClass"><value>com.beans.StudentBean</value></property>   
      <property name="validator"><ref bean="studentFormValidator"/></property>
      <property name="formView"><value>studentForm</value></property>
      <property name="successView"><value>success</value></property>
   </bean>
    
   <bean id="classMultiController" class="com.controller.CreateClassController">
	    <property name="methodNameResolver">
			<ref bean="paramResolver"/>
		</property>
		<property name="createClassDelegate">
			<ref bean="createClassDelegate"/>
		</property>
	</bean>
	
	<bean id="objectMultiController" class="com.controller.CreateObjectController">
	    <property name="methodNameResolver">
			<ref bean="paramResolver"/>
		</property>
		<property name="createObjectDelegate"><ref bean="createObjectDelegate"/></property>
	</bean>
	
	
	
	<bean id="sempediaHomeController" class="com.controller.SempediaHomeController">
		 <property name="methodNameResolver">
			<ref bean="paramResolver"/>
		</property>
		<property name="searchDelegate">
			<ref bean="searchDelegate"/>
		</property>
	</bean>
	
	<bean id="paramResolver" class="org.springframework.web.servlet.mvc.multiaction.ParameterMethodNameResolver">
		<property name="paramName"><value>action</value></property>
	</bean>
	
   <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass"><value>org.springframework.web.servlet.view.JstlView</value></property>
        <property name="prefix"><value>/jsp/</value></property>
        <property name="suffix"><value>.jsp</value></property>
    </bean>
	
	<bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
	</bean>

	
</beans>