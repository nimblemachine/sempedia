<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- For Search -->
	<bean id="searchDelegate" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces">
			<value>
				com.delegate.SearchDelegate
			</value>
		</property>
		<property name="target">
			<ref bean="searchDelegateImpl"/>
		</property>
		<property name="interceptorNames">
		      <list>
		        <value>loggingInterceptor</value>
		      </list>
   	 	</property>
	</bean>
	<bean id="searchDelegateImpl" class="com.delegate.impl.SearchDelegateImpl">
		<property name="searchService">
			<ref bean="searchService"/>
		</property>
	</bean>

	 
	<bean id="searchService" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces">
			<value>
				com.service.SearchService
			</value>
		</property>
		<property name="target">
			<ref bean="searchServiceImpl"/>
		</property>
		<property name="interceptorNames">
		      <list>
		        <value>loggingInterceptor</value>
		      </list>
   	 	</property>
	</bean>
	<bean id="searchServiceImpl" class="com.service.impl.SearchServiceImpl">
		<!--  <property name="searchDAO">
			<ref bean="searchDAO"/>
		</property>
		-->
		<property name="predicateDAO">
			<ref bean="predicateDAO"/>
		</property>
		<property name="createObjectDAO">
			<ref bean="createObjectDAO"/>
		</property>
		
	</bean>
	
	
	
	<!-- End Of For Search -->

</beans>