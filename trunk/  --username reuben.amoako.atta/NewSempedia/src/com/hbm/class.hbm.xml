<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.hibernate.pojo.ClassPojo" table="class" >
		<id name="classId" column="CLASS_ID" type="java.lang.Integer">
			<generator class="increment" />
		</id>
		<property name="className" column="CLASS_NAME"
			type="java.lang.String" />
		
		<set name="objects" table="object" lazy="true" cascade="all" >
			<key column="CLASS_ID" />
			<one-to-many class="com.hibernate.pojo.ObjectPojo"/>
		</set>
		
		<set name="subClassInheritances" table="inheritance" lazy="true" cascade="all" >
			<key column="SUBCLASS" foreign-key="CLASS_ID"/>
			<one-to-many class="com.hibernate.pojo.Inheritance"/>
		</set>
		
		<set name="superClassInheritances" table="inheritance" lazy="true" cascade="all" >
			<key column="SUPERCLASS" foreign-key="CLASS_ID"/>
			<one-to-many class="com.hibernate.pojo.Inheritance"/>
		</set>
		
		<set name="predicates" table="predicate" lazy="true" cascade="all" >
			<key column="CLASS_ID" />
			<one-to-many class="com.hibernate.pojo.Predicate"/>
		</set>
		
		
	</class>
</hibernate-mapping>